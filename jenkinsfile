pipeline {
    agent any
    
    environment {
        registry = "https://hub.docker.com/" // Removed extra '/'
        registryCredential = 'dockerhub_cred'
    }
    
    stages {
        stage('pwd') {
            steps {
                sh 'ls ; pwd'
            }
        }
        
        stage('build') {
            steps {
                script {
                    sh "docker build -t jaya91/web:1.${BUILD_NUMBER} ." // Corrected the variable interpolation syntax
                    sh 'docker images'
                }
            }
        }
        
        stage('Deploy our image') {
            steps {
                script {
                    // Push the Docker image to the registry
                    docker.withRegistry(registry, registryCredential) {
                        dockerImage.push()
                    }
                    
                    // Run the Docker container
                    docker.image("jaya91/web:1.${BUILD_NUMBER}").withRun('-p 2233:80')
                }
            }
        }
    }
}
