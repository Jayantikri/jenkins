pipeline {
    agent any
    
    environment {
        registry = "https://hub.docker.com/" 
        registryCredential = 'dockerhub_cred'
    }
    
    stages {
        stage('pwd') {
            steps {
                sh 'ls ; pwd'
            }
        }
        
        stage('build') {
            steps {
                script {
                    sh " docker build -t jaya91/web:1.${BUILD_NUMBER} . " 
                    sh 'docker images'
                }
            }
        }
        
        stage('Deploy our image') {
            steps {
                sh 'docker login -u $user -p $password ; docker push jaya91/web:1.${BUILD_NUMBER}'
                    }
                    
                    // Run the Docker container
                    sh ' docker rm -f web ; docker run -itd --name web -p 5566:80 jaya91/web:1.${BUILD_NUMBER} '
                }
            }
        }
    }
}
